
@{
    ViewBag.Title = "Validar";
}

<h2>Ingreso al sistema</h2>
@using (Html.BeginForm()) {
<table>
    <tr>
        <td>Ingrese usuario:</td>
        <td>@Html.TextBox("user")</td>
    </tr>
    <tr>
        <td>Ingrese password:</td>
        <td>@Html.TextBox("password")</td>
    </tr>

    <tr>
        <td><input type="submit" value="Ingresar" onclick="Validar()"/></td>
       
    </tr>

</table>
}
@section Scripts{
 @Scripts.Render("~/bundles/jqueryval");
      
 }
<script type="text/javascript">
    function Validar()
    {
        var usuario = $("#user").val();
        var password = $("#password").val();

        if (usuario == '')
        {
            alert("Indique el usuario");
            $("#user").focus();
            return false;
        }
        if (password == '') {
            alert("Indique el password");
            $("#password").focus();
            return false;
        }

        return true;
    }
</script>


